{
  "$schema": "https://mintlify.com/schema.json",
  "name": "StreamSkill API",
  "openapi": "openapi.yml",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#4B367C",
    "light": "#B6A4E0",
    "dark": "#2A2A2A",
    "anchors": {
      "from": "#4B367C",
      "to": "#B6A4E0"
    }
  },
  "modeToggle": {
    "default": "dark"
  },
  "versions": [
    "v1"
  ],
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "https://t.me/StreamSkill"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://streamskill.pro/en/cabinet"
  },
  "api": {
    "auth": {
      "method": "bearer"
    }
  },
  "navigation": [
    {
      "group": "Get Started",
      "pages": [
        "introduction"
      ]
    },
    {
      "group": "API Documentation",
      "pages": [
        "api-reference/authentication",
        "api-reference/pagination",
        "api-reference/data-modification",
        "api-reference/languages",
        "api-reference/errors"
      ]
    },
    {
      "group": "Basic",
      "pages": [
        "endpoints/basic"
      ]
    },
    {
      "group": "Purchases",
      "pages": [
        "endpoints/purchases/all",
        "endpoints/purchases/uncompleted",
        "endpoints/purchases/purchase",
        "endpoints/purchases/create",
        {
          "group": "Actions",
          "icon": "bolt",
          "pages": [
            "endpoints/purchases/actions/start",
            "endpoints/purchases/actions/stop",
            "endpoints/purchases/actions/delete",
            "endpoints/purchases/actions/start-chatbots",
            "endpoints/purchases/actions/stop-chatbots",
            "endpoints/purchases/actions/prolong",
            "endpoints/purchases/actions/edit-api",
            "endpoints/purchases/actions/edit-chatbots"
          ]
        }
      ]
    },
    {
        "group": "Services",
        "pages": [
            "endpoints/services/all",
            "endpoints/services/service"
        ]
    },
    {
        "group": "Tariffs",
        "pages": [
            "endpoints/tariffs/all",
            "endpoints/tariffs/tariff"
        ]
    }
  ],
  "footerSocials": {
    "website": "https://streamskill.pro"
  }
